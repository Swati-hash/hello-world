#include<iostream>
#include<conio.h>
using namespace std;
int main(){
    int i,a[5],g;
    int l=sizeof(a)/sizeof(a[0]);
    cout<<"Enter the elements of array: "<<endl;
    for(i=0;i<l;i++){
        cin>>a[i];
    }
    for(i=0;i<l;i++){
        cout<<a[i];
        cout<<"\t";
    }
    cout<<endl;
    int n=3,first,j;/*
    cout<<"enter the times of rotation: "<<endl;
    cin>>"n";*/
        for(i=0;i<n;i++){
        first=a[0];

    for(j=0;j<l-1;j++){
        a[j]=a[j+1];
    }
    a[j]=first;
    }
    cout<<"array after the rotation is :"<<endl;
    for(i=0;i<l;i++){
        cout<<a[i];
